{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "node16", // <-- Add this line
    "moduleResolution": "node16", // <-- Add this line
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "resolveJsonModule": true // <-- You likely want this too
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}